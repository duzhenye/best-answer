{
    "name": "duzhenye/best-answer",
    "description": "将帖子标记为讨论中的最佳答案",
    "keywords": [
        "flarum"
    ],
    "type": "flarum-extension",
    "license": "MIT",


    "require": {
        "flarum/core": "^2.0.0-beta.2",
        "flarum/tags": "*"
    },


    "autoload": {
        "psr-4": {
            "Duzhenye\\BestAnswer\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "最佳答案",
            "category": "feature",
            "icon": {
                "name": "far fa-comment-dots",
                "backgroundColor": "#e74c3c",
                "color": "#fff"
            }
        }
    }
}
